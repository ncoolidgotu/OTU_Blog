</table>
<br>
<br>
<% for(let count=0; count < Postlist.length; count++) { %>
    <table class="table table-primary table-hover">
        <thead class="table-borderless"> 
            <tr>
                <th class="col-2 username" colspan="2"><img class="post_pfp" src='/Assets/images/<%=Postlist[count].pfp%>'>     Richard Astley</th> 
            </tr>
        </thead>
        <thead>
            <tr>
                <th class="col-2 post_title"><%=Postlist[count].title%></th> 
                <th class="col-2 post_date"><%=Postlist[count].postDate%></th>
            </tr>
        </thead>
        <tbody class="table-light text-start">
            <tr>
                <td colspan="2 post_content"><%=Postlist[count].text_content%></td> 
            </tr>
        </tbody>
        <tbody class="table-light text-start">
            <tr>
                <td colspan="2"><img class="post_image" src='/Assets/images/userUploads/<%=Postlist[count].photo_content%>'></td> 
            </tr>
        </tbody>
        <tbody>
            <td class="col-1">
                <a href='update/<%=Postlist[count]._id %>'  class="btn btn-info">
                <i class="fa fa-pencil-alt">  Update</i></a>
            </td>
            <td class="col-1">
                <a href='delete/<%=Postlist[count]._id %>'
                class="btn btn-danger deleteConfirm">
                <i class="fa-regular fa-trash-can">  Delete</i></a>
            </td>
        </tbody>
    </table>
<% } %>

</main>
