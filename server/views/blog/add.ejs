<div class="container">
<br>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%=title %></h1>
            <form class="form" action="/blog-feed/add" method="post" enctype="multipart/form-data">
            <!--TITLE-->
                <div class="form-field">
                    <label for="titleTextField">Post Title</label>
                    <input type="text" 
                        class="form-control" 
                        id="titleTextField" 
                        placeholder="Enter your post title" 
                        name="title" 
                        required>
                </div>
            <!--CATEGORY--><!--dropdown selection-->
                <div class="form-field">
                    <label for="categoryDropdown">Category</label>
                    <select type="text" 
                        class="form-control" 
                        id="categoryDropdown" 
                        name="category"                        
                        required>
                        <option value="Memes">Memes</option>
                        <option value="Movies">Movies</option>
                        <option value="Music">Music</option>
                        <option value="Video Games">Video Games</option>
                        <option value="Academic">Academic</option>
                        <option value="Politics">Politics</option>
                        <option value="Anime">Anime</option>
                        <option value="Books">Books</option>
                        <option value="Cars">Cars</option>
                        <option value="Food">Food</option>
                        <option value="Art">Art</option>
                        <option value="Sports">Sports</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            <!--For the main post-->
                <div class="form-field">
                    <label for="postTextField">Post</label>
                    <textarea type="text" 
                        class="form-control" 
                        id="postTextField" 
                        placeholder="Write a fun post here!" 
                        name="text_content" 
                        required></textarea>
                </div>
                <!--post image-->
                <div class="form-field">
                    <label for="photo_content">Upload Image</label>
                    <input type="file" 
                        class="form-control" 
                        id="photo_content" 
                        value="" 
                        name="photo_content">
                </div>

                <br>
                <!--button to submit-->
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> POST!
                </button>
                <!--button to cancel-->
                <a href="/blog-feed" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>

            </form>
        </div>
    </div>
</div>

