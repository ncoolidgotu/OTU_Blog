<div class="container">
<br>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%=title %></h1>
            <form class="form" method="post">

            <!--TITLE-->
                <div class="form-group">
                    <label for="titleTextField">Post Title</label>
                    <input type="text" 
                        class="form-control" 
                        id="titleTextField" 
                        placeholder="Enter Book Title" 
                        name="title" 
                        required>
                </div>
            <!--CATEGORY--><!--radio button-->
                <div class="form-group">
                    <label for="categoryDropdown">Category</label>
                    <input type="text" 
                        class="form-control" 
                        id="categoryDropdown" 
                        name="category"                        
                        required>
                        <option value="Movies">Movies</option>
                        <option value="Music">Music</option>
                        <option value="Video Games">Video Games</option>
                        <option value="Academic">Academic</option>
                        <option value="Politics">Politics</option>
                        <option value="Anime">Anime</option>
                        <option value="Books">Books</option>
                        <option value="Cars">Cars</option>
                        <option value="Food">Food</option>
                        <option value="Art">Art</option>
                        <option value="Sports">Sports</option>
                        <option value="Other">Other</option>
                </div>

                <div class="form-group">
                    <label for="publTextField">Year Publication</label>
                    <input type="text" 
                        class="form-control" 
                        id="publTextField" 
                        placeholder="Enter Year of Publication" 
                        name="published" 
                        required>
                </div>

            <!-- change into main post -->
                <div class="form-group">
                    <label for="descTextField">Description</label>
                    <textarea type="text" 
                        class="form-control" 
                        id="descTextField" 
                        placeholder="Describe the book briefly" 
                        name="description" 
                        required></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" 
                        class="form-control" 
                        id="priceTextField"
                        placeholder="Enter Price" 
                        name="price" 
                        required>
                </div>

                <br>

                <button class="btn-btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>

            </form>
        </div>
    </div>
</div>

